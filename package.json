{
  "name": "olt-dashboard-monorepo",
  "private": true,
  "scripts": {
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev": "pnpm run /^dev:.*$/",
    "install:all": "pnpm install",
    "build": "pnpm -r build",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "turbo": "^2.7.1"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.27",
      "@types/react-dom": "^18.3.7"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "@types/react": "18",
        "@types/react-dom": "18"
      }
    }
  }
}
